<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Booking</title>
    <link rel="stylesheet" href="../../css/style.css">
</head>
<body>
    <table>
        <tr>
          <th>Booking ID</th>
          <th>User ID</th>
          <th>Type ID</th>
          <th>Room</th>
          <th>Action</th>
        </tr>
        
        <% for (var i = 0; i < bookings.length; i++) { %>
        <tr>
            <td><%= bookings[i].Booking_id %></td>
            <td><%= bookings[i].User_id %></td>
            <td><%= bookings[i].Type_id %></td>
            <td><%= bookings[i].Room %></td>
            <td>
                <a href="http://localhost:5500/Booking/<%= bookings[i].Booking_id %>">View</a>
                <a href="http://localhost:5500/Booking/update/<%= bookings[i].Booking_id %>">Edit</a>
                <a href="http://localhost:5500/Booking/delete/<%= bookings[i].Booking_id %>">Delete</a>
            </td>
        </tr>
        <% } %> 
    </table>
    <a href="http://localhost:5500/Bookings/create">Create</a>
</body>
</html>
